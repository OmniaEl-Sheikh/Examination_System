@model IEnumerable<User>
@{
    ViewData["Title"] = "Show Departments";
}

<div class="container mt-5 instuctorIndex report2">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>

                <th>Admin Name</th>
                <th>Admin Email</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>

                        <a asp-action="EditAdmin" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="DeleteAdmin" asp-controller="Admin" onclick="return confirm('are you sure')" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="createAdmins" asp-controller="Admin" class="btn btn-info">Add Admin</a>
</div>
