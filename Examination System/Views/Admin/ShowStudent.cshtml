@model IEnumerable<User>
@{
    ViewData["Title"] = "Show Students";
}

<div class="container mt-5 instuctorIndex report2">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>

                <th>Student Name</th>
                <th>Student Email</th>
                <th>Student Branch</th>
                <th>Student Department</th>
                <th>Operations</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Student.Branch.BranchName</td>
                    <td>@item.Student.Department.DepartmentName</td>
                    <td>
                        <a asp-action="EditStudent" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="DeleteStudent" asp-controller="Admin" onclick="return confirm('Are you sure you want to delete?')" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <a asp-action="createStudent" asp-controller="Admin" class="btn btn-info">Add Student</a>
</div>