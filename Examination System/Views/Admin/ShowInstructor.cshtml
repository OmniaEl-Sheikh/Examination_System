@model IEnumerable<User>

@{
    ViewData["Title"] = "Show Instructors";
}

<div class="container mt-5 instuctorIndex report2">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                
                <th>Instructor Name</th>
                <th>Instructor Email</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="EditInstructor" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="DeleteInstructor" asp-controller="Admin" onclick="return confirm('Are you sure you want to delete?')" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="createInstructor" asp-controller="Admin" class="btn btn-info">Add Instructor</a>
    </div>

